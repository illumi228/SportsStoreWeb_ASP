@model IEnumerable<SportsStore.Domain.Entities.User>

@{
    ViewBag.Title = "Admin:All Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel  col-md-5">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h5>Все Пользователи</h5>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-right">ID</th>
                    <th>Имя</th>
                    <th class="text-right">Фамилия</th>
                    <th class="text-center">E-mail</th>
                    <th class="text-center">Заказы</th>
                    <th class="text-center"></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td class="text-right">
                            @item.userID
                        </td>
                        <td>
                            @item.FirtsName
                        </td>
                        <td class="text-right">
                            @item.SecondName
                        </td>
                        <td class="text-center">@item.Email</td>
                        <td class="text-center">@Html.RouteLink("Заказы", new { controller = "Order", action = "Index", userID = item.userID }, new { @class = "btn btn-info btn-xs" })</td>
                        <td class="text-center">
                            @using (Html.BeginForm("Delete", "AdminProduct"))
                            {
                                @Html.Hidden("productID", item.userID)
                                <input type="submit" value="Заблокировать" class="btn btn-xs btn-danger" />
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

