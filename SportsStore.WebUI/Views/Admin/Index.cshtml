@model IEnumerable<SportsStore.Domain.Entities.Product>

@{
    ViewBag.Title = "Admin:All Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Все товары</h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Имя</th>
                <th class="text-right">Цена</th>
                <th class="text-center">Действие</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @item.ProductID
                    </td>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new { productID = item.ProductID })
                    </td>
                    <td class="text-right">
                        @item.Price.ToString("c")
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("productID", item.ProductID)
                            <input type="submit" value="Удалить" class="btn btn-xs btn-default" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer text-center">
        @Html.ActionLink("Добавить новый товар", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>
